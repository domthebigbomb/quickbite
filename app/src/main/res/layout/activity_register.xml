<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cmsc436.quickbite.RegisterActivity"
    android:background="#00B9E6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="QuickBite"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textSize="50dp"
        android:textColor="#f4f4f4" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/etUsername"
        android:hint="  Email"
        android:background="@drawable/userpass_bg"
        android:textColorHint="#8DDFF3"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="35dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:layout_below="@+id/etUsername"
        android:hint=" Password"
        android:background="@drawable/userpass_bg"
        android:textColorHint="#8DDFF3"
        android:layout_alignStart="@+id/etUsername"
        android:layout_alignEnd="@+id/etUsername"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPasswordConfirm"
        android:layout_below="@+id/etPassword"
        android:hint=" Confirm Password"
        android:background="@drawable/userpass_bg"
        android:textColorHint="#8DDFF3"
        android:layout_alignStart="@+id/etPassword"
        android:layout_alignEnd="@+id/etPassword"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Register"
        android:id="@+id/bRegister"
        android:layout_below="@+id/etPasswordConfirm"
        android:background="@drawable/button_bg"
        android:textColor="#8DDFF3"
        android:textAllCaps="false"
        android:layout_alignStart="@+id/etPasswordConfirm"
        android:layout_alignEnd="@+id/etPasswordConfirm"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwords Don&apos;t Match"
        android:id="@+id/tvIncError"
        android:textColor="#ed4b4b"
        android:visibility="invisible"
        android:layout_below="@+id/bRegister"
        android:layout_alignStart="@+id/etLoginHere" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Have an account? Login"
        android:id="@+id/etLoginHere"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" />
</RelativeLayout>
